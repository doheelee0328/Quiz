{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "cypress/**/*.ts",
    "cypress/**/*.tsx"
  ]
}
